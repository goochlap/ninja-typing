<div class="container-home">
  <h1 class="anim-typewriter">NINJA TYPING</h1>
  <div class="row">
    <div class="col-12 col-sm-8 offset-sm-2 col-lg-4 offset-lg-4 d-flex flex-column align-items-center">
      <%= image_tag ('dinosaur.png'), height: '300px', id: 'img-home-page' %>
      <div>
        <% if current_user && !current_user.avatar.nil? %>
        <%= link_to "JOUER", user_avatar_board_path(current_user, current_user.avatar, current_user.avatar.board), class:'btn btn-play mt-5' %>
        <% else %>
        <%= link_to "JOUER", user_session_path, class:'btn btn-play mt-5' %>
        <% end %>
      </div>
    </div>
  </div>
</div>